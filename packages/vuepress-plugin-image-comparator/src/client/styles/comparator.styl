.comparator
  width fit-content
  position relative
  margin 2rem auto
  // border var(--c-brand) 0.2rem solid
  img
    display block

  .original, .comparison
    img
      margin unset
      padding unset
      height 100% !important

  .comparison, .slider-container
    position absolute
    top 0

  .slider-container
    z-index 5
    width 0.15rem
    height 100%
    background var(--c-brand)
    display flex
    align-items center
    justify-content center

    .slider
      // cursor ew-resize
      // cursor grab
      width .75rem
      height .75rem
      border-radius 50%
      // top calc(50% - (1.5rem/2))
      // left calc(-1.5rem/2)
      position absolute
      background var(--c-brand)
      transition transform 0.1s ease-out
      display flex
      flex-flow row nowrap

      &:hover, &:focus, &:active
        transform scale(2)
        // width 0.5rem
        // transition width 0.1s ease-out

      & > *
        opacity 0
        color white
        width 40%
        height 80%
        padding 10% 0% 10% 10%
        margin 0

        &:last-child
          padding 10% 10% 10% 0%

      &:hover, &:focus, &:active
        & > *
          opacity 1


  .comparison
    right 0

    img
      object-fit cover
      object-position 100% 50%
      left 0
      right 0
      top 0
      bottom 0

    &, & img
      width 100%
      height 100%